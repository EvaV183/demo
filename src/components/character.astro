---

import Extras from '../components/extras.astro'


export type Char = {
    isAlive: boolean;
    message: string;
    name: string;
    family: string;
    age: number;
    reignYears: number;
    category: string;
    weapon?: undefined;
    skillLevel?: undefined;
    adviseTo?: undefined;
    serveLevel?: undefined;
    servesTo?: undefined;

}

type Props = {
    character: Char
}

const {character } = Astro.props

const fullName = `${character.name} ${character.family}`
const image = `/src/assets/${character.name}.jpg`
const imagenAlt = `Imagen de ${character.name}`

---

<li class="character col">
        <div class="card character__card">
          <img 
          src={image} 
          alt={imagenAlt}
          class="character__picture card-img-top" />
          <div class="card-body">
            <h2 class="character__name card-title h4">{fullName} {Character.family}</h2>
            <div class="character__info">
              <ul class="list-unstyled">
                <li>Edad: X a√±os</li>
                <li>
                  Estado:
                  <i class="fas fa-thumbs-down"></i>
                  <i class="fas fa-thumbs-up"></i>
                </li>
              </ul>
            </div>
            <div class="character__overlay">
                
                <Extras/>

              <div class="character__actions">
                <button class="character__action btn">habla</button>
                <button class="character__action btn">muere</button>
              </div>
            </div>
          </div>
          <i class="emoji"></i>
        </div>
</li>