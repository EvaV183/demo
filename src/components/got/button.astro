---
import type { Char } from "../../types/types";

type Props = {
  character: Char;
};

const { character } = Astro.props;
---

<!-- Serializamos -->
<button class="action" data-character={JSON.stringify(character)}>
  <slot />
</button>

<style>
  button {
    background-color: #67331e;
    color: #fff;
    width: 80%;
  }
</style>
